{
  "name": "highspeed-otsukai-rogue",
  "private": true,
  "packageManager": "pnpm@8.6.0",
  "scripts": {
    "dev": "pnpm --filter ./apps/web dev",
    "build": "pnpm --filter ./apps/web build",
    "lint": "eslint \"**/*.{ts,tsx}\" --fix",
    "prepare": "npx husky install"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "latest",
    "prettier": "^3",
    "typescript": "^5",
    "husky": "^9",
    "lint-staged": "^15"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "**/*.{ts,tsx}": "eslint --fix"
  }
}
